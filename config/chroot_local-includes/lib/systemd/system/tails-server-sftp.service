[Unit]
Description=OpenBSD Secure Shell server for SFTP for Tails Server
After=network.target auditd.service
ConditionPathExists=!/etc/ssh/sshd_not_to_be_run

[Service]
ExecStart=/usr/sbin/sshd -D -f /var/lib/tails-server/sftp/config
ExecReload=/bin/kill -HUP $MAINPID
KillMode=process
Restart=on-failure