$:.unshift File.expand_path('../lib', __FILE__)
require 'tails_build_settings'

Vagrant.configure("2") do |config|
  config.vm.box = 'tails-builder-20141201'
  config.vm.box_url = 'http://dl.amnesia.boum.org/tails/project/vagrant/tails-builder-20141201.box'

  config.vm.box_download_checksum_type = "sha256"
  config.vm.box_download_checksum =
    'efb339f06192d5db16585abc946e50cc73cb13aad5afd39357c6a8e33aebb814'

  config.vm.provision "shell", inline: <<-EOF
    sudo http_proxy='#{ENV['http_proxy']}' /vagrant/provision/setup-tails-builder
  EOF

  config.vm.synced_folder '../.git', '/amnesia.git'

  config.vm.provider :virtualbox do |vb|
    if ENV['TAILS_RAM_BUILD']
      memory = VM_MEMORY_FOR_RAM_BUILDS
    else
      memory = VM_MEMORY_FOR_DISK_BUILDS
    end
    vb.memory = memory
    cpus = ENV['TAILS_BUILD_CPUS']
    vb.cpus = cpus unless cpus.nil?
  end
end
