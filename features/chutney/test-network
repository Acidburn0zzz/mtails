Authority = Node(
    tag="auth",
    authority=1,
    relay=1,
    torrc="authority.tmpl"
)

NonExitRelay = Node(
    tag="relay",
    relay=1,
    torrc="relay-non-exit.tmpl"
)

ExitRelay = Node(
    tag="exit",
    relay=1,
    exit=1,
    torrc="relay.tmpl"
)

Client = Node(
    tag="client",
    torrc="client.tmpl"
)

NODES = Authority.getN(5) + \
        NonExitRelay.getN(20) + \
        ExitRelay.getN(10) + \
        Client.getN(1)

ConfigureNodes(NODES)
