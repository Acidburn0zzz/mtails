#. type: Plain text
#, no-wrap
msgid "[[!inline pages=\"doc/first_steps/usb_reset.intro\" raw=\"yes\"]]\n"
msgstr "[[!inline pages=\"doc/first_steps/usb_reset.intro\" raw=\"yes\"]]\n"

