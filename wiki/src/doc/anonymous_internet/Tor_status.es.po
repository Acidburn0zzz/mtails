msgid "Status icon\n"
msgstr ""

#. type: Plain text
msgid "The current status of Tor appears as an onion icon in the notification area:"
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"[[!img "
"doc/first_steps/introduction_to_gnome_and_the_tails_desktop/tor-status.png "
"link=\"no\"]]\n"
msgstr ""

#. type: Bullet: '  - '
msgid "The onion icon is not crossed out when you are connected to Tor."
msgstr ""

#. type: Bullet: '  - '
msgid "The onion icon is crossed out while Tor is stopped or starting."
msgstr ""

#. type: Plain text
#, no-wrap
msgid ""
"    <div class=\"tip\">\n"
"    <p>When Tor is stopped all connections to the Internet are blocked by "
"default.</p>\n"
"    </div>\n"
msgstr ""

